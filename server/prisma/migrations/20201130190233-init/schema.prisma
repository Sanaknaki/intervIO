generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model Application {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  position        String
  company         String
  website         String
  status          String
  postedById      Int?
  interviewRounds Int      @default(0)
  postedBy        User?    @relation(fields: [postedById], references: [id])
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  applications Application[]
}
